@model IEnumerable<RentCar.Models.RentCarModels.Marca>

@{
    ViewData["Title"] = "Index";
}

<h2>Marcas</h2>

<p>
    <a asp-action="Create" class="btn btn-info navbar-btn">Crear</a>
</p>
<form method="get">
    <input type="text" id="Criterio" name="Criterio" />
    <input type="submit" id="cmdBuscar" value="Buscar" />
</form>
<table class="table table-hover table-striped table-condensed ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMarca">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMarca">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMarca">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
